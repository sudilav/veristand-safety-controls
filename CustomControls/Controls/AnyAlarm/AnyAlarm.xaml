<UserControl x:Class="NationalInstruments.VeriStand.CustomControls.AnyAlarm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:niControls="clr-namespace:NationalInstruments.Controls;assembly=NationalInstruments.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NationalInstruments.VeriStand.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="52" d:DesignWidth="52">
    <UserControl.Resources>
        <Style x:Key="CustomBoxStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Silver"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="{Binding EllipseFill}"/>
            <Setter Property="MinWidth" Value="52" />
            <Setter Property="MinHeight" Value="52" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            </Style>
    </UserControl.Resources>
    <Grid>
        <!-- Put the Border element with the custom style into your Grid -->
        <Border Style="{StaticResource CustomBoxStyle}">
            <!-- Content goes here -->
        </Border>
    </Grid>

</UserControl>